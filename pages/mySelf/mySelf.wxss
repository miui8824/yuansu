@import "/static/css/common.wxss";

page {
  background: #f2f2f2;
}

::-webkit-scrollbar {
  width: 0;
  height: 100vh;
  color: transparent;
}

.my_self {
  background: #f2f2f2;
  height: 100%;
  width: 100%;
  overflow-x: hidden;
}

.my_self .self_top {
  padding: 30rpx 0rpx 10rpx 0rpx;
  height: 300rpx;
  color:#fff;
 background:linear-gradient(135deg,rgba(255,62,63,1) 0%,rgba(225,0,64,1) 100%);
}

.my_self .self_info_box {
  margin-bottom: 78rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
}

.my_self .self_top .self_info {
  display: flex;
}

.my_self .self_top .self_user_img {
  position: relative;
  width: 118rpx;
  height: 118rpx;
  border-radius: 59rpx;
}

.my_self .self_top .self_user_img>image {
  width: 118rpx;
  height: 118rpx;
  border-radius: 59rpx;
}

.my_self .self_top .user_info {
  margin-left: 20rpx;
  padding-top: 15rpx;
}

.my_self .user_info .user_name {
  margin-bottom: 10rpx;
  width: 260rpx;
  font-size: 40rpx;
  line-height: 53rpx;
  font-weight: 300;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  height: 54rpx;
  color:#fff;
}

.my_self .user_info .user_type {
  width: 100rpx;
  height: 32rpx;
  line-height: 32rpx;
  font-size: 20rpx;
  color: #333;
  background: #FFD101;
  text-align: center;
  border-radius: 17rpx;
}

.my_self .self_top .self_bind {
  padding-top: 20rpx;
  display: flex;
  color:#fff;
  text-align: center;
}

.my_self .self_bind .bind_phone {
  margin-left: 36rpx;
}

.my_self .self_bind .bind_phone .bind_icon,
.my_self .self_bind .bind_wechat .bind_icon {
  height: 60rpx;
  color:#fff;
  text-align: center;
}

.my_self .self_bind .bind_wechat .bind_icon>image{
   width: 48rpx;
  height: 48rpx;
}
.my_self .self_bind .bind_phone .bind_icon>image {
  width: 32rpx;
  height: 48rpx;
}

.my_self .self_bind .bind_phone>view, .my_self .self_bind .bind_wechat>view {
  font-size: 22rpx;
  line-height: 22rpx;
  color: #333;
  text-align: center;
}

.my_self .self_money_box {
  display: flex;
  align-items: center;
  border:1px solid red;
}

.my_self .self_money_box>view {
  width: 33%;
  text-align: center;
}

.my_self .self_money_box .selft_border {
  margin-top: 10rpx;
  width: 0px;
  height: 40rpx;
  border-right: 1rpx solid #333;
  opacity: 0.5;
}
.bgpadd{
  border:1px solid red;
  border-radius: 20rpx;
  background: #F8F8F8;
  transform: translateY(-20rpx);
  padding:20rpx;
  z-index: 1000;
}
.my_self .self_money_box .balance_number {
  height: 36rpx;
  font-size: 36rpx;
  line-height: 36rpx;
  font-weight: 500;
}

.my_self .self_money_box .balance_name {
  margin-top: 20rpx;
  height: 26rpx;
  font-size: 26rpx;
  line-height: 26rpx;
}

.my_self .user_balance_box {
  padding: 34rpx 30rpx 0 30rpx;
  display: flex;
  justify-content: space-between;
  height: 126rpx;
  background: #fff;
}

.my_self .user_balance_box .user_balance>view {
  margin-bottom: 24rpx;
  font-size: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  color: #333;
  font-weight: 600;
}

.my_self .user_balance_box .user_balance>text {
  font-size: 40rpx;
  line-height: 40rpx;
  color: #ff262c;
  font-weight: 500;
}

.my_self .user_balance_box .user_button {
  margin-top: 36rpx;
  display: flex;
}

.my_self .user_balance_box  .balance_detail {
  width: 156rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  font-size: 30rpx;
  border: 2rpx solid;
  border-color: #333;
  border-radius: 28rpx;
  font-weight: 500;
}

.my_self .user_balance_box  .balance_reflect {
  margin-left: 13rpx;
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 30rpx;
  border-radius: 30rpx;
  background: #dd232f;
  font-weight: 500;
}

.my_self .my_order_box {
  background: #fff;
  border:1px solid blue;
  border-radius: 10rpx;
}

.my_order_box .my_order_title {
  padding: 0rpx 30rpx;
  display: flex;
  font-weight: 500;
  height: 100rpx;
  justify-content: space-between;
  border-bottom: 1rpx solid #eee;
}

.my_order_box .my_order_title>view {
  height: 100rpx;
  line-height: 100rpx;
}

.my_order_box .my_order_title>view>image {
  position: relative;
  top: 7rpx;
  width: 32rpx;
  height: 32rpx;
}

.my_self .order_item_box {
  /* padding-top:50rpx;
  padding-right: 10rpx;
  padding-bottom: 30rpx;  */
  padding: 30rpx 30rpx 30rpx 30rpx;
  display: flex;
  font-weight: 500;
  justify-content: space-between;
}

.my_self .order_item {
  width: 140rpx;
  text-align: center;
  font-size: 26rpx;
  line-height: 26rpx;
}

.my_self .order_item .item_img {
  margin-bottom: 18rpx;
  position: relative;
}

.my_self .order_item .item_img>image {
  width: 54rpx;
  height: 60rpx;
}
/* 菜单 */
.tabmenu{
  border-radius: 10rpx;
  border:1px solid red;
  background:#FFF;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.tabmenu .tab{
  width: 33.3333%;
  /* border:1px solid blue; */
  font-size: 25rpx;
  font-weight: 500;
  background: #fff;
}
.tabmenu .tab image{
  width: 53rpx;
  height: 53rpx;
}
/* pages/addAddress/addAddress.wxss */
@import "/static/css/common.wxss";
page {
  background: #f2f2f2;
}
.add_add {
  position: relative;
  width: 100%;
  background: #f2f2f2;
}
.add_add .add_add_button {
  position: fixed;
  bottom: -4rpx;
  left: 0;
  right: 0;
  padding: 30rpx;
  z-index: 99;
  height: 100rpx;
  background: #fff;
  border-top: 1rpx solid #eee;
}

.add_add .add_add_button .success_button>button {
  display: block;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-radius: 50rpx;
  overflow: hidden;
  font-size: 36rpx;
  color: #fff;
  background: #E23E53;
  border:1rpx solid #E23E53;
  /* margin-bottom: 30rpx; */
  font-weight: 600;
}
/* ------------------ */
.add_add .common_plank {
  background: #fff;
}
.add_add .common_plank>view {
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
}
.add_add .common_plank .load_more {
  height: 40rpx;
  position:relative;
  /* right:12rpx; */

}
.add_add .common_plank .load_more>image {
  width: 28rpx;
  height: 40rpx;
  margin-left:10rpx;

}
.add_add .common_plank .plank_middle {
  /* margin: 0 20rpx; */
  flex-grow: 2;
  text-align: right;
}
.add_add .common_plank .plank_place {
  color: #ccc;
}
.add_add .common_plank .plank_middle1 {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.add_add .common_plank .plank_middle2 {
  text-align: left;
}
.add_add .common_plank .coupons_number {
  padding: 0 8rpx;
  font-size: 22rpx;
  height: 32rpx;
  line-height: 32rpx;
  color: #fff;
  background: #ff262c;
}
.out_add_box .add_border {
  position: relative;
  width: 100%;
  height: 4rpx;
}
.out_add_box .add_border>image {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 4rpx;
}
.add_add .out_add_box .image_box {
  padding: 60rpx 30rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
}
.add_add .out_add_box .image_main {
  position: relative;
}
.add_add .out_add_box .image_close {
  position: absolute;
  right: -10rpx;
  top: -10rpx;
  width: 100rpx;
  height: 100rpx;
  text-align: right;
  vertical-align: top;
}
.add_add .out_add_box .image_close>image {
  width: 43rpx;
  height: 43rpx;
}
.add_add .out_add_box .image_text,
.add_add .out_add_box .image_image {
  width: 336rpx;
  height: 200rpx;
  text-align: center;
  border-radius: 10rpx;
  background: #f2f2f2;
  overflow: hidden;
}
.add_add .out_add_box .image_image>image {
  width: 336rpx;
  height: 200rpx;
}
/* pages/coupons/coupons.wxss */
@import "/static/css/common.wxss";
::-webkit-scrollbar{
  width: 0;
  height: 100%;
  color: transparent;
}
page{
  height:100vh;
}
.coupons_box {
  width: 100%;
  height: 100%;
  background: #f2f2f2;
}
.coupons_box .scroll_view {
  width: 100%;
  height: calc(100vh-88rpx);
  background: #f2f2f2;
}
.coupons_box .list_box_box {
  padding: 20rpx 30rpx 0;
  margin-top: 88rpx;
}
.coupons_box .list_box .coupons_item {
  position: relative;
  margin-bottom: 20rpx;
  height: 200rpx;
}
.coupons_box .list_box .coupons_item .coupons>image {
  width: 100%;
  height: 200rpx;
}
.coupons_box .list_box .item_left {
  position: absolute;
  padding-top: 43rpx;
  left: 0;
  top: 0;
  width: 240rpx;
  text-align: center;
  z-index: 99;
}
.coupons_box .item_left .item_money {
  font-size: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-weight: 600;
}
.coupons_box .item_left .item_limit {
  margin-top: 26rpx;
  font-size: 22rpx;
  height: 22rpx;
  line-height: 22rpx;
}
.coupons_box .list_box .item_right {
  padding: 30rpx;
  position: absolute;
  left: 240rpx;
  top: 0;
  width: 390rpx;
  z-index: 99;
}
.coupons_box .item_right .item_type {
  margin-top: 20rpx;
  margin-bottom: 26rpx;
  /* 超出隐藏 */
  overflow: hidden;
  /* 超出显示省略号 */
  text-overflow: ellipsis;
  /* 不换行 */
  white-space: nowrap;
}
.coupons_box .item_right .item_use {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 46rpx;
}
.coupons_box .item_right  .item_button>button {
  position: relative;
  top: -6rpx;
  width: 120rpx;
  height: 46rpx;
  line-height: 46rpx;
  text-align: center;
  border-radius: 23rpx;
  overflow: hidden;
  font-size: 23rpx;
  font-weight: 600;
  color: #333;
  background: #DD232F;
  border:1rpx solid #DD232F;
} 
.coupons_box .item_right  .item_time {
  height: 46rpx;
  line-height: 46rpx;
}

.coupons_box .item_right  .item_name{
  font-weight: 500;
}
.coupons_box .no_order_box {
  padding-top: 292rpx;
  width: 100%;
  height: 100vh;
  text-align: center;
}
.coupons_box .no_order_box .no_order_logo {
  margin-bottom: 48rpx;
  width: 360rpx;
  height: 204rpx;
}
.coupons_box .no_order_box .no_order_text {
  font-size: 32rpx;
  line-height: 32rpx;
  color: #666666;
  text-align: center;
}
.coupons_box .no_order_box .no_order_button {
  margin: 0 auto;
  margin-top: 60rpx;
  width: 240rpx;
  height: 78rpx;
  line-height: 78rpx;
  border-radius: 39rpx;
  background: #DD232F;
  color: #333;
  font-size: 32rpx;
}
/* pages/preBalanceDetail/preBalanceDetail.wxss */
@import "/static/css/common.wxss";
.container-all{
width: 100%;
height: 100%;
}
.bg-img{
width: 100%;
height: 100%;
display: block;
}

page {
  background: #f2f2f2;
  min-height: 100%;
}

.balanceBox{
  height: 100%;
  margin-top: 20rpx;
  background-color: #fff;
  padding-left: 30rpx;
  margin-bottom: 46rpx;
}
.balanceBox .balanceList{
  height: 152rpx;
  padding: 38rpx 0rpx;
  border-bottom: 2rpx solid #eee;
  box-sizing: border-box;
  position: relative;
}

.balanceBox .balanceList .imgBox{
  width: 74rpx;
  height: 74rpx;
  border-radius: 50%;
  position: absolute;
  left: 0
}

.balanceBox .balanceList .imgBox>image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.balanceBox .balanceList .infoBox{
  margin-left: 23rpx;
  width: 350rpx;
  position: absolute;
  left: 74rpx;
}

.balanceBox .balanceList .infoBox .name{
  color: #333;
  font-size: 32rpx;
  font-weight: 600;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp:1;
  -webkit-box-orient:vertical;
}

.balanceBox .balanceList .infoBox .time{
  color: #999;
  font-size: 24rpx;
  margin-top: 6rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp:1;
  -webkit-box-orient:vertical;
}

.balanceBox .balanceList .moneyBox{
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  font-weight: 600;
  width:230rpx;
  text-align: right;
  overflow: hidden;
  display: -webkit-box;
  text-overflow: ellipsis;
  -webkit-line-clamp:1;
  -webkit-box-orient: vertical;
}

.emptyBox{
  width:100%;
  height:83vh;
  text-align:center;
  background: #f2f2f2;
}

.emptyBox image{
  width:360rpx;
  height:204rpx;
  margin-top:50%;
}

.emptyBox view{
  color:#666666;
  font-size:32rpx;
  margin-top:40rpx;
}
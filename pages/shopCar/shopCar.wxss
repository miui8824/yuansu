/* pages/shopCar/shopCar.wxss */
@import "/static/css/common.wxss";

::-webkit-scrollbar {
  width: 0;
  height: 100%;
  color: transparent;
}

page {
  background: #f2f2f2;
  height: 100%;
}

.shop_car {
  background: #f2f2f2;
  min-height: 90%;
}

.shop_car .no_order_box {
  padding-top: 292rpx;
  width: 100%;
  /* height: 100%; */
  text-align: center;
}

.shop_car .no_order_box .no_order_logo {
  width: 360rpx;
  height: 204rpx;
}

.shop_car .no_order_box .no_order_text {
  font-size: 32rpx;
  line-height: 32rpx;
  color: #666;
  margin-top: 48rpx;
}

.shop_car .no_order_box .no_order_button {
  font-weight: 500;
  margin: 0 auto;
  margin-top: 60rpx;
  width: 240rpx;
  height: 78rpx;
  line-height: 78rpx;
  border-radius: 39rpx;
  background: #e23e53;
  color: #fff;
  font-size: 32rpx;
}

.shop_car .scroll_view {
  background: #f2f2f2;
}

.shop_car .shop_car_all {
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 110rpx;
  background: #fff;
}

.shop_car .shop_car_all .all_money .money_number .color_red.font_32 {
  font-weight: 500;
}

.shop_car .shop_car_all .all_select>image {
  margin-right: 10rpx;
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  vertical-align: middle;
}

.shop_car .shop_car_all .all_select>text {
  display: inline-block;
  height: 40rpx;
  font-size: 28rpx;
  line-height: 40rpx;
}

.shop_car  .all_money .all_button_box {
  margin-left: 30rpx;
}

.shop_car  .all_money .all_button>button {
  width: 172rpx;
  height: 78rpx;
  font-weight: 600;
  line-height: 78rpx;
  text-align: center;
  overflow: hidden;
  font-size: 28rpx;
  color: #fff;
  margin-top: 0;
  background: linear-gradient(135deg, rgba(255, 62, 63, 1) 0%, rgba(225, 0, 64, 1) 100%);
  border-radius: 42px;
}

.shop_car .all_money {
  display: flex;
}

.shop_car .all_money .money_said {
  text-align: right;
}

.shop_car .shop_list_box .shop_list_item {
  margin-bottom: 20rpx;
  height: 280rpx;
  padding: 0 30rpx;
  background: #fff;
}

.shop_car .shop_list_box .shop_list_main {
  padding: 40rpx 0;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  border-bottom: 1rpx solid #f2f2f2;
}

.shop_list_box .shop_list_main .select_buttons {
  width: 40rpx;
  height: 40rpx;
}

.shop_list_box .shop_list_main .select_buttons>image {
  width: 40rpx;
  height: 40rpx;
}

.shop_list_box .shop_list_main .main_img {
  margin: 0 30rpx;
}

.shop_list_box .shop_list_main .main_img>image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
}

.shop_list_box .shop_list_main .main_shop_text {
  flex-grow: 2;
  height: 200rpx;
  position: relative;
  width: 390rpx;
}

.shop_list_box .shop_list_main .shop_name {
  display: -webkit-flex;
  align-items: center;
  position: relative;
}

.shop_list_box .shop_list_main .shop_name_text {
  font-size: 28rpx;
  line-height: 38rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  flex-grow: 2;
  margin-right: 50rpx;
  font-weight: 500;
  width: 340rpx;
}
.shop_list_box .shop_list_main .close_button {
  margin-left: 30rpx;
  height: 30rpx;
  width: 30rpx;
  position: absolute;
  right: 0;
  top: 7rpx;
}

.shop_list_box .shop_list_main .close_button>image {
  display: block;
  height: 36rpx;
  width: 36rpx;
}

.shop_list_box .shop_list_main .shop_introduce {
  margin-top: 20rpx;
  height: 24rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.shop_list_box .shop_list_main .shop_money_box {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-weight: 500;
  position: absolute;
  bottom: 0;
  color: #FF4F60;
  width: 100%;
}

.shop_list_box .shop_list_main .shop_money_box .color_red.font_32 {
  height: 48rpx;
  line-height: 48rpx;
}

.shop_car .goods_dialog_box {
  position: fixed;
  margin-top: -210rpx;
  margin-left: -300rpx;
  top: 50%;
  left: 50%;
  width: 600rpx;
  height: 410rpx;
  background: #fff;
  text-align: center;
  border-radius: 20rpx;
  overflow: hidden;
  z-index: 101;
}

.shop_car .goods_dialog_main {
  padding: 40rpx;
  text-align: left;
}

.shop_car .goods_dialog_button {
  display: flex;
  height: 100rpx;
  align-items: center;
  justify-content: space-around;
  border-top: 1rpx solid #e5e5e5;
}

.shop_car .goods_dialog_button .all_button_border {
  width: 1rpx;
  height: 100rpx;
  background: #e5e5e5;
}

.shop_car .goods_dialog_button .all_button {
  width: 295rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-weight: 600;
}

.button_replace {
  position: fixed;
  bottom: 40rpx;
  right: 30rpx;
  width: 100rpx;
  height: 80rpx;
  background: transparent;
  z-index: 99;
}

.shop_car .popup_box {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: #000;
  opacity: 0.6;
  z-index: 100;
}


@import "/static/css/common.wxss";
::-webkit-scrollbar{
  width: 0;
  height: 100%;
  color: transparent;
}
page{
  height: 100%;
  background:#f2f2f2;
}
.shop_car {
  background: #f2f2f2;
  height: 100%;
}
.shop_car .no_order_box {
  padding-top: 100rpx;
  width: 100%;
  height: 100%;
  text-align: center;
}
.shop_car .no_order_box .no_order_logo {
  margin-bottom: 50rpx;
  width: 360rpx;
  height: 204rpx;
}
.shop_car .no_order_box .no_order_text {
  font-size: 32rpx;
  line-height: 32rpx;
  color: #666666;
}
.shop_car .no_order_box .no_order_button {
  margin: 0 auto;
  margin-top: 60rpx;
  width: 240rpx;
  height: 78rpx;
  line-height: 78rpx;
  border-radius: 39rpx;
  background: #DD232F;
  color: #333;
  font-size: 32rpx;
}
.shop_car .scroll_view {
  position: relative;
  width: 100%;
  height: 100vh;
}
.shop_car .shop_car_all {
  margin-bottom: 20rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 110rpx;
  background: #fff;
}
.shop_car .shop_car_all .all_select>image {
  margin-right: 10rpx;
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  vertical-align: middle;
}
.shop_car .shop_car_all .all_select>text {
  display: inline-block;
  height: 40rpx;
  font-size: 28rpx;
  line-height: 40rpx;
}
.shop_car  .all_money .all_button_box {
  margin-left: 30rpx;
}
.shop_car  .all_money .all_button>button {
  width: 172rpx;
  height: 78rpx;
  line-height: 78rpx;
  text-align: center;
  border-radius: 39rpx;
  overflow: hidden;
  font-size: 28rpx;
  color: #333;
  background: #DD232F;
  border:1rpx solid #DD232F;
}
.shop_car .all_money {
  display: flex;
}
.shop_car .all_money .money_said {
  text-align: right;
}
.shop_car .shop_list_box .shop_list_item {
  margin-bottom: 20rpx;
  padding: 0 30rpx;
  background: #fff;
}
.shop_car .shop_list_box .shop_list_main {
  padding: 40rpx 0;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f2f2f2;
}
.shop_list_box .shop_list_main .select_buttons{
  margin-right: 30rpx;
}
.shop_list_box .shop_list_main .select_buttons>image {
  width: 40rpx;
  height: 40rpx;
}

.shop_list_box .shop_list_main .main_img{
  position: relative;
}

.shop_list_box .shop_list_main .main_img>image {
  margin: 0 30rpx 0 0;
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
}
.shop_list_box .shop_list_main .main_img>.tip {
  position: absolute;
  bottom: 0;
  width: 200rpx;
  height: 42rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: #FF262C;
  opacity: 0.9;
  border-radius: 0 0 8rpx 8rpx;
  text-align: center;
  font-weight: 500;
}
.shop_list_box .shop_list_main .main_shop_text {
  flex-grow: 2;
  height: 200rpx;
  width: 390rpx;
  position: relative;
}
.shop_list_box .shop_list_main .shop_name {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
}
.shop_list_box .shop_list_main .shop_name_text {
  font-size: 28rpx;
  line-height: 38rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-weight: 500;
}
.shop_list_box .shop_list_main .close_button {
  margin-left: 30rpx;
  height: 40rpx;
  width: 40rpx;
}
.shop_list_box .shop_list_main .close_button>image {
  font-size: 20rpx;
  height: 20rpx;
  width: 20rpx;
  line-height: 20rpx;
}
.shop_list_box .shop_list_main .shop_introduce {
  margin-top: 20rpx;
  height: 28rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  color: #999;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.shop_list_box .shop_list_main .shop_money_box {
  position: absolute;
  width:100%;
  bottom: 0;
  display: flex;
  justify-content: space-between;
}
.shop_list_box .shop_list_main .shop_money_box .color_red.font_32 {
  height: 48rpx;
  line-height: 48rpx;
  font-weight: 600;
}
.shop_list_box .shop_list_main .shop_money_box text{
  color: #333;
  font-size: 28rpx;
}

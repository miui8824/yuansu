.out {
  width: 100%;
  height: 100vh;
  float: left;
  background: #f2f2f2;
}

.padd {
  width: calc(100% - 60rpx);
  padding: 0 30rpx;
  background: #fff;
}

.top {
  height: 40rpx;
  margin-top: 20rpx;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  font-size: 30rpx;
  text-align: right;
  font-weight: bold;
  /* float: left; */
}
.fans{
  width:100%;
  /* float: left; */
  border-top:1rpx solid #eeeeee;
}
.fan{
  width: calc(100% - 40rpx);
  height: 110rpx;
  /* float: left; */
  background: #fff;
  font-size: 31rpx;
  padding:0 20rpx;
}
.pic{
  width: 80rpx;
  height: 80rpx;
  background: #a4a4a4;
  border-radius: 50%;
  float: left;
  margin: 15rpx 20rpx;
}
.time{
  float: right;
  margin-right: 25rpx;
  text-align: right;
  color:#a4a4a4;
   line-height: 110rpx;
   height: 110rpx;
}
.name{
  float: left;
  height:110rpx;
  width:300rpx;
  line-height: 110rpx;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}
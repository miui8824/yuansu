/* pages/logistics/logistics.wxss */
page{
  height: 100%;
}
.con {
  width: calc(100% - 52rpx);
  padding-left: 26rpx;
  padding-right: 26rpx;
}
.font-size {
  font-size: 28rpx;
}
.top{
  float: left;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: #f2f2f2 solid 20rpx
}
.top-left{
  float:left;
  width:50%;
  height:80rpx;
  overflow:hidden;
  white-space: nowrap;
  text-overflow: ellipsis;


}
.top-right{
  float: right;
  width: 50%;
  text-align: right;
  height:80rpx;
  overflow:hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.mes image{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: -21rpx;
  top:26rpx;
}
.mes{
width:calc(100% - 40rpx);
  position: relative;
  float: left;
  padding:22rpx 0 22rpx 40rpx;
  border-left: #ccc solid 2rpx;
  margin-left: 19rpx;
  color: #333;
}
.Shelter-top{
  position: absolute;
  width: 4rpx;
  height: 50rpx;
  background: #fff;
  top:0;
  left:-2rpx;
}
.Shelter-bot{
  position: absolute;
  width: 4rpx;
  height: 20rpx;
  background: #fff;
  bottom: 0;
  left: -2rpx;
}
.logisticNone{
  height: 100%;
  width: 100%;
  background: #f2f2f2;
  margin:0 auto;
  position: relative;
}
.logisticNone image{
  width: 360rpx;
  height: 204rpx;
  display: block;
  top: 292rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

.logisticNone text{
  display: block;
  text-align: center;
  position: absolute;
  top: 530rpx;
  width: 100%;
  color: #666;
  font-size: 32rpx;
}
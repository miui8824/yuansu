.group_box .group_main .text_button_box {
  margin-top: 56rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  /* height: 60rpx; */
  border:1px solid blue;
}
.group_box .group_main .text_button_box>text {
  font-size: 36rpx;
  color: #ff262c;
  font-weight: 600;
}
.group_box .group_main .buy_now>button {
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #DD232F;
  font-weight: 600;
  font-size: 28rpx;
  color: #333;
}




.group_box .group_footer {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  text-align: center;
  color: #999;
}

/* 没有数据 */
.group_box .no_order_box {
  /* padding-top: 141rpx; */
  padding-top: 200rpx;
  width: 100%;
  height: 100%;
  text-align: center;
  background: #f2f2f2;
}
.group_box .no_order_box .no_order_logo {
  margin-bottom: 48rpx;
  width: 360rpx;
  height: 204rpx;
}
.group_box .no_order_box .no_order_text {
  font-size: 32rpx;
  line-height: 32rpx;
  color: #666666;
  text-align: center;
}
.group_box .no_order_box .no_order_button {
  width: 240rpx;
  height: 78rpx;
  line-height: 78rpx;
  border-radius: 39rpx;
  background-color: #DD232F;
  font-size: 32rpx;
  font-weight: 500;
  color: #fff;
  margin: 60rpx auto 0;
}


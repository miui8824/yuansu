/* pages/groupHome/groupHome.wxss */
@import "/static/css/common.wxss";
.container-all{
width: 100%;
height: 100%;
}
.bg-img{
width: 100%;
height: 100%;
display: block;
}

page{
  min-height: 100%;
  /* position: relative; */
  background: #f2f2f2;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.group_box {
  background: #f2f2f2;
}
.group_box .group_home_scroll {
  position: fixed;
  border:1px solid red;
  width: 100%;
  height: 100%;
}
.group_box .group_tap {
  position: fixed;
  display: flex;
  height: 0;
  width: 100%;
  justify-content: space-around;
  background: #fff;
  z-index: 99;
}
.group_box .clear108.clear {
  height: 259rpx;
  background: #f2f2f2;
}
.group_box .clear108.clear image{
  width: 100%;
  height: 259rpx;
}
.group_box .tap_item {
  height: 86rpx;
  font-size: 32rpx;
  line-height: 86rpx;
  color: #999;
  font-weight: 600;
}
.group_box .tap_item_on {
  color: #333;
  border-bottom: 6rpx solid #DD232F;
}
.group_box .group_main {
  background: #fff;
  border-radius: 20rpx;
  transform: translateY(-20rpx);
}
.group_box .group_main_item {
  padding:40rpx 30rpx;
  display: flex;
  justify-content: space-between;
  height: 240rpx;
  border:1px solid red;
  border-bottom: 1rpx solid #eee;
}
.group_box .group_main_item:last-child {
  border-bottom: none;
}
.group_box .group_main_item>image {
  width: 240rpx;
  height: 240rpx;
  border-radius: 8rpx;
}
.group_box .group_main_item .good_text_box {
  width: 420rpx;
  height: 240rpx;
}
.group_box .group_main .text_title {
  line-height: 40rpx;
  font-size: 25rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.group_box .group_main .small_title{
  font-size: 22rpx;
  color:#999;
  margin:24rpx 0;
}
.group_box .group_main .text_icon_box {
  border:1px solid red;
}
